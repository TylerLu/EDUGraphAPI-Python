{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "defaultValue": "EDUGraphAPIPython",
      "metadata": {
        "description": "The name of the web client app that you wish to create."
      }
    },
    "mySqlAdministratorLogin": {
      "type": "string",
      "defaultValue": "azureuser",
      "metadata": {
        "description": "The administrator login of the MySQL."
      }
    },
    "mySqlAdministratorLoginPassword": {
      "type": "securestring",
      "defaultValue": "P@ssw0rd",
      "metadata": {
        "description": "The administrator login password of the MySQL."
      }
    },
    "sourceCodeRepositoryURL": {
      "type": "string",
      "defaultValue": "https://github.com/<YOUR REPOSITORY>/O365-EDU-Python-Samples",
      "metadata": {
        "description": "Source code repository URL"
      }
    },
    "sourceCodeBranch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "Sourcecode Repo branch"
      }
    },
    "sourceCodeManualIntegration": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Use 'true' if you are deploying from the base repo, 'false' if you are deploying from your own fork. If you're using 'false', make sure you have admin permissions to the repo. If you get an error, you should add GitHub integration to another web app manually, so that you get a GitHub access token associated with your Azure Subscription."
      }
    },
    "clientId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": ""
      }
    },
    "clientSecret": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": ""
      }
    },
    "clientCertificatePath": {
      "type": "string",
      "defaultValue": "app_only_cert.pfx",
      "metadata": {
        "description": "Path of the app-only certificate."
      }
    },
    "clientCertificatePassword": {
      "type": "securestring",
      "defaultValue": "J48W23RQeZv85vj",
      "metadata": {
        "description": "Password of the app-only certificate."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "hostingPlanName": "[parameters('siteName')]",
    "webSiteName": "[toLower(parameters('siteName'))]",
    "mySQLName": "[variables('webSiteName')]",
    "mySQLFirewallRuleName": "AllowAllWindowsAzureIps",
    "mySQLDatabaseName": "edu",
    "pythonSiteExtensionName": "azureappservice-python353x64"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "sku": {
        "name": "B1",
        "tier": "Basic",
        "size": "B1",
        "family": "B",
        "capacity": 0
      },
      "name": "[variables('hostingPlanName')]",
      "apiVersion": "2015-08-01",
      "location": "[variables('location')]",
      "properties": {
        "name": "[variables('hostingPlanName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers",
      "apiVersion": "2017-12-01-preview",
      "kind": "",
      "location": "[variables('location')]",
      "name": "[variables('mySQLName')]",
      "properties": {
          "version": "5.7",
          "administratorLogin": "[parameters('mySqlAdministratorLogin')]",
          "administratorLoginPassword": "[parameters('mySqlAdministratorLoginPassword')]",
          "storageProfile": {
              "storageMB": 5120,
              "backupRetentionDays": "7",
              "geoRedundantBackup": "Disabled"
          }
      },
      "sku": {
          "name": "B_Gen4_1",
          "family": "Gen4",
          "tier": "Basic",
          "capacity": 1,
          "size": 5120
      },
      "resources": [
        {
          "apiVersion": "2017-12-01-preview",
          "type": "databases",
          "location": "[variables('location')]",
          "name": "[variables('mySQLDatabaseName')]",
          "properties":{  
             "charset":"utf8",
             "collation":"utf8_general_ci"
          },
          "dependsOn": [
            "[resourceId('Microsoft.DBforMySQL/servers', variables('mySQLName'))]"
          ]
        },
        {
          "type": "firewallRules",
          "apiVersion": "2017-12-01-preview",
          "kind": "v12.0",
          "name": "[variables('mySQLFirewallRuleName')]",
          "location": "[variables('location')]",
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          },
          "dependsOn": [
            "[resourceId('Microsoft.DBforMySQL/servers', variables('mySQLName'))]"
          ]
        }
      ]
    },
    {
      "type": "Microsoft.Web/sites",
      "kind": "app",
      "name": "[variables('webSiteName')]",
      "apiVersion": "2015-08-01",
      "location": "[variables('location')]",
      "properties": {
        "name": "[variables('webSiteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "siteConfig": {
          "AlwaysOn": true
        }
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "[variables('pythonSiteExtensionName')]",
          "type": "siteextensions",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webSiteName'))]"
          ]
        },
        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "appsettings",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites/', variables('webSiteName'))]"
          ],
          "properties": {
            "ClientId": "[parameters('clientId')]",
            "ClientSecret": "[parameters('clientSecret')]",
            "ClientCertificatePath": "[parameters('clientCertificatePath')]",
            "ClientCertificatePassword": "[parameters('clientCertificatePassword')]",
            "MySQLHost": "[concat(variables('mySQLName'), '.mysql.database.azure.com')]",
            "MySQLUser": "[concat(parameters('mySqlAdministratorLogin'), '@', variables('mySQLName'))]",
            "MySQLPassword": "[parameters('mySqlAdministratorLoginPassword')]",
            "SourceCodeRepositoryUrl": "[parameters('SourceCodeRepositoryUrl')]",
            "command": "deploy.cmd"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites/', variables('webSiteName'))]",
            "[resourceId('Microsoft.Web/Sites/config', variables('webSiteName'), 'appsettings')]",
            "[resourceId('Microsoft.Web/sites/siteextensions', variables('webSiteName'), variables('pythonSiteExtensionName'))]",
            "[resourceId('Microsoft.DBforMySQL/servers/firewallRules', variables('mySQLName'), variables('mySQLFirewallRuleName'))]",
            "[resourceId('Microsoft.DBforMySQL/servers/databases', variables('mySQLName'), variables('mySQLDatabaseName'))]"
          ],
          "properties": {
            "RepoUrl": "[parameters('sourceCodeRepositoryURL')]",
            "branch": "[parameters('sourceCodeBranch')]",
            "IsManualIntegration": "parameters('sourceCodeManualIntegration')]"
          }
        }
      ],
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      ]
    }
  ]
}